<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:fc="clr-namespace:MH.UI.Sample.Features.Controls;assembly=MH.UI.Sample"
  xmlns:c="clr-namespace:MH.UI.WPF.Controls;assembly=MH.UI.WPF"
  xmlns:ap="clr-namespace:MH.UI.WPF.AttachedProperties;assembly=MH.UI.WPF">

  <DataTemplate DataType="{x:Type fc:TextsVM}">
    <StackPanel Orientation="Vertical">
      <TextBox Text="TextBox" Margin="4"/>
      <TextBox Text="TextBox" Margin="4" IsInactiveSelectionHighlightEnabled="True"/>
      <TextBlock Text="TextBlock" Margin="4"/>
      <Label Content="Label"/>
      <c:IconTextBlock ap:Icon.Res="IconBug" ap:Text.Text="Sample" Margin="2" Shadow="None"/>
      <c:IconTextBlock ap:Icon.Res="IconBug" ap:Text.Text="Sample" Margin="2" Shadow="Icon"/>
      <c:IconTextBlock ap:Icon.Res="IconBug" ap:Text.Text="Sample" Margin="2" Shadow="Text"/>
      <c:IconTextBlock ap:Icon.Res="IconBug" ap:Text.Text="Sample" Margin="2"/>
      <c:IconTextBlock ap:Icon.Res="IconBug" ap:Text.Text="Sample" Margin="2" Shadow="None" Style="{StaticResource MH.S.IconTextBlock.Borders.RoundDark}"/>
      <c:IconTextBlock ap:Icon.Res="IconBug" ap:Text.Text="Sample" Margin="2" Style="{StaticResource MH.S.IconTextBlock.Borders.RoundDark}"/>
    </StackPanel>
  </DataTemplate>
</ResourceDictionary>